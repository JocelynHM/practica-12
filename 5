//Leer un arreglo de 15 elementos. Mostrar el arreglo y la suma de los n√∫meros.
#include<stdio.h>
int x, a 15
int leer ()
{
 for(c=0; c<15; c++)
 {
  scanf("%d", & a c); 
 }
 return 0; 
}

int mostrar ()
{
 for(c=0; c<15; c++)
 {
  printf("%d t" a c); 
 }
 return 0; 
}

int main()
{
  int sum=0, 
  printf("este programa leera un arreglo de 15 numeros, los sumara y la suma del arreglo"); 
  printf("ingrese 15 numeros"); 
  leer(); 
  for(c=0; c<15; c++)
   {
    sum= a c + sum;  
   }
  printf("el arreglo es");
  mostrar();
  printf("la suma del arreglo es %d", sum); 
  return 0; 
 }
